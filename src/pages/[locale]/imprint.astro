---
import { getStaticPathsFromLocales as getStaticPaths } from '@utils/translation';

export { getStaticPaths };

import Layout from "@layouts/Layout.astro"; 
import { 
  COORDINATOR_NAME, 
  COORDINATOR_ADDRESS, 
  COORDINATOR_VAT, 
  COORDINATOR_REP,
  CONTACT_EMAIL,
  TECH_PROVIDER_NAME,
  getTechProviderUrlForLocale
} from "@utils/constants";

const { t, locale } = Astro.locals;
---

<Layout title={t('imprint_title')}>
  <main class="imprint-container">
    <h1>{t('imprint_title')}</h1>

    <section class="imprint-section">
      <h2>{t('imprint_owner_title')}</h2>
      <p>{t('imprint_owner_desc')}</p>
      
      <address class="coordinator-details">
        <strong>{COORDINATOR_NAME}</strong><br />
        {COORDINATOR_ADDRESS}<br /><br />
        
        <strong>{t('imprint_vat_label')}:</strong> {COORDINATOR_VAT}<br />
        {COORDINATOR_REP && <Fragment><strong>{t('imprint_representative')}:</strong> {COORDINATOR_REP}<br /></Fragment>}
        <br />
        <strong>{t('imprint_contact_label')}:</strong> <a href={`mailto:${CONTACT_EMAIL}`}>{CONTACT_EMAIL}</a>
      </address>
    </section>

    <section class="imprint-section">
      <h2>{t('imprint_eu_funding_title')}</h2>
      <p class="eu-disclaimer">
        {t('eu_disclaimer')}
      </p>
    </section>

    <section class="imprint-section">
      <h2>{t('imprint_tech_title')}</h2>
      <p>
        {t('imprint_tech_desc')} 
        <a href={getTechProviderUrlForLocale(locale)} target="_blank" rel="noopener noreferrer">{TECH_PROVIDER_NAME}</a>.
      </p>
    </section>

    <section class="imprint-section">
      <h2>{t('imprint_liability_title')}</h2>
      <p>{t('imprint_liability_text')}</p>
    </section>

  </main>
</Layout>

<style>
  .imprint-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
    color: var(--color-text);
  }

  h1 { font-size: 2.5rem; margin-bottom: 2rem; }
  h2 { font-size: 1.5rem; margin-bottom: 1rem; color: var(--color-secondary); }
  
  .imprint-section { margin-bottom: 2.5rem; }
  
  .coordinator-details {
    font-style: normal;
    background-color: rgba(0, 0, 0, 0.03); 
    padding: 1.5rem;
    border-radius: 8px;
    line-height: 1.6;
  }

  .eu-disclaimer {
    border-left: 4px solid var(--color-secondary);
    padding-left: 1rem;
  }

  a { color: var(--color-secondary); text-decoration: underline; }
  a:hover { text-decoration: none; }
</style>