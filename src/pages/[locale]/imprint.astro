---
import { getStaticPathsFromLocales as getStaticPaths } from '@utils/translation';

export { getStaticPaths };

import Layout from "@layouts/Layout.astro";
import { 
  IAT_NAME, IAT_ADDRESS, IAT_EMAIL, IAT_LEGAL_REP,
  WH_NAME, WH_ADDRESS, WH_PHONE, WH_EMAIL, WH_VAT, WH_LEGAL_REP,
  TECH_PROVIDER_NAME, getTechProviderUrlForLocale, CONTACT_EMAIL
} from "@constants";

const { t, locale } = Astro.locals;
---

<Layout title={t('imprint_title')}>
  <main class="imprint-container">
    <h1>{t('imprint_title')}</h1>

    <section class="imprint-section">
      <h2>{t('imprint_resp_content')}</h2>
      <address class="legal-block">
        <strong>{IAT_NAME}</strong><br />
        {IAT_ADDRESS}<br /><br />
        <strong>{t('imprint_email_label')}:</strong> <a href={`mailto:${IAT_EMAIL}`}>{IAT_EMAIL}</a><br />
        <strong>{t('imprint_project_contact_label')}:</strong> <a href={`mailto:${CONTACT_EMAIL}`}>{CONTACT_EMAIL}</a>
      </address>
      
      <p class="sub-block">
        <strong>{t('imprint_legal_rep')}:</strong><br />
        {IAT_LEGAL_REP}
      </p>
    </section>

    <section class="imprint-section">
      <p>{t('imprint_parent_org_desc')}</p>
      
      <address class="legal-block">
        <strong>{WH_NAME}</strong><br />
        {WH_ADDRESS}<br /><br />
        <strong>{t('imprint_phone_label')}:</strong> {WH_PHONE}<br />
        <strong>{t('imprint_email_label')}:</strong> <a href={`mailto:${WH_EMAIL}`}>{WH_EMAIL}</a>
      </address>

      <p class="sub-block">
        {t('imprint_public_law')}
      </p>

      <p class="sub-block">
        <strong>{t('imprint_legal_rep')}:</strong><br />
        {WH_LEGAL_REP}
      </p>

      <p class="sub-block">
        <strong>{t('imprint_supervisory_title')}:</strong><br />
        {t('imprint_supervisory_desc')}
      </p>

      <p class="sub-block">
        <strong>{t('imprint_vat_label')}:</strong> {WH_VAT}
      </p>
    </section>

    <section class="imprint-section">
      <h2>{t('imprint_tech_title')}</h2>
      <p>
        {t('imprint_tech_desc')} 
        <a href={getTechProviderUrlForLocale(locale)} target="_blank" rel="noopener noreferrer">
          {TECH_PROVIDER_NAME}
        </a>.
      </p>
    </section>

    <section class="imprint-section disclaimer-section">
      <h2>{t('imprint_disclaimer_title')}</h2>
      <p>{t('imprint_disclaimer_p1')}</p>
      <p>{t('imprint_disclaimer_p2')}</p>
      <p>{t('imprint_copyright_p3')}</p>
      
      <p class="eu-disclaimer">{t('eu_disclaimer')}</p>
    </section>

  </main>
</Layout>

<style>
  .imprint-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 1rem;
    color: var(--color-text);
  }

  h1 { font-size: 2.5rem; margin-bottom: 2.5rem; }
  h2 { font-size: 1.5rem; margin-bottom: 1.2rem; color: var(--color-secondary); border-bottom: 1px solid #eaeaea; padding-bottom: 0.5rem; }
  
  .imprint-section { margin-bottom: 3rem; }
  
  .legal-block {
    font-style: normal;
    background-color: rgba(0, 0, 0, 0.03); 
    padding: 1.5rem;
    border-radius: 8px;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .sub-block { margin-top: 1rem; line-height: 1.5; }

  .disclaimer-section p {
    margin-bottom: 1rem;
    font-size: 0.95rem;
    line-height: 1.6;
    color: #555;
  }

  .eu-disclaimer {
    border-left: 4px solid var(--color-secondary);
    padding-left: 1rem;
    margin-top: 2rem;
  }

  a { color: var(--color-secondary); text-decoration: underline; }
  a:hover { text-decoration: none; }
</style>