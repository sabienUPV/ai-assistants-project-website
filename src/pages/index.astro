---
import Layout from '../layouts/Layout.astro';

import { Image } from 'astro:assets';
import logo from '../assets/images/LOGO_AI-ASSISTANTS.svg';
import ProjectTitle from '../components/ProjectTitle.astro';
import Documents from '../components/Documents.astro';
import Organisers from '../components/Organisers.astro';
---

<Layout title="Welcome to AI-ASSISTANTS">
	<section id="description">
		<Image src={logo} alt="AI-ASSISTANTS Logo" height="200" />
		<h1><ProjectTitle /></h1>
		<h2>AI-Assisted Solutions for Enhancing the Independent Living of Persons with Intellectual Disabilities</h2>
		<p>
			This project is dedicated to leveraging artificial intelligence to create solutions that support the independent living of persons with intellectual disabilities.
		</p>
		<h2 id="resources">Explore Our Resources</h2>
		<Documents />
	</section>
	<section id="organisers">
		<h2>Organisers</h2>
		<p>Entities involved in this project</p>
		<Organisers />
	</section>
</Layout>
<style>
	section {
		display: flex;
		flex-direction: column;
		align-items: center;	
		justify-content: center;
		text-align: center;
		padding: 2rem;
	}
	section#description {
		margin: auto;
		max-width: 60ch;
	}
	h1 {
		color: var(--color-medium-blue);
		font-size: 3rem;
	}
	h2 {
		color: var(--color-dark-grey);
		font-size: 1.5rem;
	}
</style>