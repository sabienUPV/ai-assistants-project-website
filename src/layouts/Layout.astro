---
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import { home } from '@utils/url.ts';

// Importing the Roboto font for consistent typography across the site
// Note: For optimization, we are only importing the specific weights and styles we need.
// If we ever need more weights or styles (e.g. bold + italic, or non-typical weights), we can easily add them here.
import '@fontsource/roboto/400.css'; // Regular weight
import '@fontsource/roboto/400-italic.css'; // Regular italic weight
import '@fontsource/roboto/700.css'; // Bold weight

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="AI-ASSISTANTS Project Website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={home('favicon.svg')} />
		<link rel="icon" sizes="any" href={home('favicon.ico')} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main id="main-content">
			<slot />
		</main>
		<Footer />
		<style is:global>
			:root {
				/* Logo palette colors */
				--color-light-blue: #A8D4DC;
				--color-medium-blue: #3BA6BC;
				--color-green: #95C11F;
				--color-dark-grey: #657176;

				/* Additional colors */
				--color-background: #F4F4F4;
				--color-dark-blue: #1F5A66;
				--color-semi-transparent-white: #FFFFFFAA;
			}
			html {
				background-color: var(--color-background);
			}

			body {
				margin: 0;
				font-family: 'Roboto', 'Arial', system-ui, sans-serif;
				font-weight: 400;
				/* Accessibility boost: readable line height and no text justification */
        line-height: 1.6;
        text-align: left;
        color: var(--color-dark-grey);
			}
			main {
				padding: 1.5rem;
				max-width: 1200px; /* Prevents lines from getting too long/hard to read */
        margin: 0 auto;
			}
			h1, h2 {
        text-align: center;
        font-weight: 700;
        color: var(--color-dark-blue);
        margin-bottom: 2rem;
        letter-spacing: 0.5px;
      }
      h1 { font-size: 2.2rem; }
      h2 { font-size: 1.5rem; }
		</style>
	</body>
</html>
