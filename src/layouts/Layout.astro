---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="AI-ASSISTANTS Project Website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
		<style is:global>
			:root {
				--color-light-blue: #A8D4DC;
				--color-medium-blue: #3BA6BC;
				--color-green: #95C11F;
				--color-dark-grey: #657176;
			}
			html {
				font-family: system-ui, sans-serif;
				background-color: #f4f4f4;
			}
			body {
				margin: 0;
			}
			main {
				margin: auto;
				padding: 1.5rem;
				max-width: 60ch;
			}
		</style>
	</body>
</html>
