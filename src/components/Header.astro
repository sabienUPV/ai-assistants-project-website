---
import EuLogo from './EuLogo.astro';
import ProjectTitle from './ProjectTitle.astro';
---
<header>
    <a href="/">
        <ProjectTitle includeLogo={true} includeSubtitle={true} style="font-size: 23.5px" />
    </a>
    <EuLogo style="margin-left: 2rem" />
    <a href="/">Home</a>
    <a href="/#resources">Resources</a>
</header>
<style>
    header {
        display: flex;
        /* justify-content: center; */
        align-items: center;
        padding: 1rem;
        background-color: var(--color-dark-blue);
        --color-subtitle: var(--color-semi-transparent-white);
    }

    header a:not(:first-child) {
        margin-left: 3rem;
        color: var(--color-semi-transparent-white);
        font-size: 1.5rem;
        text-decoration: none;
        font-weight: bold;
        margin-bottom: 10px;
    }
</style>
