---
import EuLogo from './EuLogo.astro';
import ProjectTitle from './ProjectTitle.astro';

const home = (path = '') => `${import.meta.env.BASE_URL}${path}`;
---
<header>
    <a href={home('#')}>
        <ProjectTitle includeLogo={true} includeSubtitle={true} style="font-size: 23.5px" />
    </a>
    <EuLogo style="margin-inline-start: 2rem" />
    <div class="nav-links">
        <a href={home('#')}>Welcome</a>
        <a href={home('#objectives')}>Objectives</a>
        <a href={home('#organisers')}>Partners</a>
        <a href={home('#resources')}>Resources</a>
    </div>
</header>
<style>
    header {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        padding: 1rem;
        background-color: var(--color-dark-blue);
        --color-subtitle: var(--color-semi-transparent-white);
    }

    header > * {
        margin: 1rem;
    }

    header .nav-links {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        margin-inline-start: auto;
        margin-block-start: 1.5rem;
        margin-block-end: 1.5rem;
    }

    @media (max-width: 1326px) {
        header {
            justify-content: center;
        }
        header .nav-links {
            margin-inline-end: auto;
        }
    }

    header .nav-links a {
        color: var(--color-semi-transparent-white);
        font-size: 1.5rem;
        text-decoration: none;
        font-weight: bold;
        margin-inline: 1rem;
        margin-block-end: 1rem;
    }

    header .nav-links a:hover {
        color: white;
    }
</style>
