---
import EuLogo from '@components/EuLogo.astro';
import ProjectTitle from '@components/ProjectTitle.astro';
import LocaleSelector from './LocaleSelector.astro';
import NavigationMenu from './NavigationMenu.astro';

const { homeLocale: home } = Astro.locals;
---

<header>
    <div class="branding">
        <a href={`${home()}#top`} class="title-link">
             <ProjectTitle includeLogo={true} includeSubtitle={true} class="project-title" loading="eager" />
        </a>
        <div class="eu-logo-wrapper">
             <EuLogo class="eu-logo" loading="eager" />
        </div>
    </div>

    <NavigationMenu class="nav-wrapper" />

    <div class="locale">
        <LocaleSelector class="locale-selector" />
    </div>
</header>

<style>
    header {
        display: grid;
        background-color: var(--color-secondary);
        padding: 0.5rem 2rem;
        gap: 0.5rem 2rem; /* Row gap 0.5rem, Column gap 2rem */
        align-items: center;

        font-size: 1.5rem;
        
        /* DESKTOP LAYOUT */
        /* Branding (Left) | Nav (Middle) | Locale (Right) */
        grid-template-columns: auto 1fr auto; 
        
        /* We define the visual layout here using names */
        grid-template-areas:
            "branding nav locale";
            
        --color-text: var(--color-text-on-secondary);
        --color-subtitle: var(--color-text);
    }

    /* Assign the HTML elements to the Grid Areas */
    
    .branding {
        grid-area: branding;
        display: flex;
        align-items: center;
        column-gap: 1.5rem; /* Using column-gap instead of gap makes it so it doesn't create a big gap when they wrap on mobile */
        flex-wrap: nowrap;
    }

    .locale {
        grid-area: locale;
        justify-self: end;
        align-self: center;
        margin-top: 0.28rem; /* Adjusted for better vertical alignment with the nav */
    }

    .nav-wrapper {
        grid-area: nav;
        justify-self: end; /* Pushes it to the far right */
        align-self: center;
        position: relative;
    }

    /* --- Component Styles --- */
    .title-link {
        text-decoration: none;
    }

    /* --- TABLET LAYOUT --- */
    @media (max-width: 1535px) {
        header {
            grid-template-columns: auto auto;
            
            /* REORDER EVERYTHING HERE */
            /* This is the magic. We just change the list order. */
            grid-template-areas:
                "branding  branding"
                "nav  locale";
            
            padding: 1rem;
            justify-items: stretch; 
            text-align: left;
            gap: 1rem;
        }

        .branding {
            justify-content: center;
            width: 100%;
            flex-wrap: wrap;
            font-size: 1.2rem;
        }

        .branding .project-title {
            --logo-height: 110px; /* Custom property to control logo height from the parent */
        }

        .branding .eu-logo {
            height: 55px;
        }

        /* Moving the locale and nav next to each other somehow centers them out */
        .locale {
            font-size: 1.5rem;
            justify-self: start; /* Move it to the left, next to the nav */
        }

        .nav-wrapper {
            justify-self: end; /* Move it to the right, next to the locale */
        }
    }

    /* --- MOBILE LAYOUT --- */
    @media (max-width: 790px) {
        header {
            /* Two equal columns for the top row controls */
            grid-template-columns: 1fr 1fr;
            
            grid-template-areas:
                "nav      locale"
                "branding branding";
            
            padding: 0.2rem;
            justify-items: center; 
            text-align: center;
            gap: 0;
        }

        .branding .eu-logo {
            display: none; /* Hide the EU logo on mobile to save space */
        }

        .locale {
            grid-area: locale;
            justify-self: end; /* Top Right */
            align-self: center;
        }

        .nav-wrapper {
            justify-self: start; /* Top Left */
        }

        /* Override the dropdown alignment for the left-side menu */
        .nav-wrapper :global(.dropdown-menu) {
            left: 0;
            right: auto;
            min-width: 200px;
        }
    }
</style>