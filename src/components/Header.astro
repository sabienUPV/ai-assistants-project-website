---
import EuLogo from '@components/EuLogo.astro';
import ProjectTitle from '@components/ProjectTitle.astro';
import LocaleSelector from './LocaleSelector.astro';
import { Icon } from 'astro-icon/components';

const { homeLocale: home } = Astro.locals;
---

<header>
    <div class="branding">
        <a href={`${home()}#top`} class="title-link">
             <ProjectTitle includeLogo={true} includeSubtitle={true} class="project-title" />
        </a>
        <div class="eu-logo-wrapper">
             <EuLogo class="eu-logo" />
        </div>
    </div>

    <div class="nav-wrapper">
        <button class="hamburger-btn" aria-label="Toggle navigation">
            <Icon name="hamburger" width="32" height="32" aria-hidden="true" />
        </button>
        <nav aria-label="Main navigation" class="nav">
            <ul>
                <li><a href={`${home()}#top`}>Welcome</a></li>
                <li><a href={`${home()}#objectives`}>Objectives</a></li>
                <li><a href={`${home()}#organisers`}>Partners</a></li>
                <li><a href={`${home()}#resources`}>Resources</a></li>
            </ul>
        </nav>
    </div>

    <div class="locale">
        <LocaleSelector class="locale-selector" />
    </div>
</header>

<style>
    header {
        display: grid;
        background-color: var(--color-dark-blue);
        padding: 0.5rem 2rem;
        gap: 0.5rem 2rem; /* Row gap 0.5rem, Column gap 2rem */
        align-items: center;

        font-size: 1.5rem;
        
        /* DESKTOP LAYOUT */
        /* Branding (Left) | Nav (Middle) | Locale (Right) */
        grid-template-columns: auto 1fr auto; 
        
        /* We define the visual layout here using names */
        grid-template-areas:
            "branding nav locale";
            
        --color-text: var(--color-semi-transparent-white);
        --color-subtitle: var(--color-text);
    }

    /* Assign the HTML elements to the Grid Areas */
    
    .branding {
        grid-area: branding;
        display: flex;
        align-items: center;
        column-gap: 1.5rem; /* Using column-gap instead of gap makes it so it doesn't create a big gap when they wrap on mobile */
        flex-wrap: nowrap;
    }

    .locale {
        grid-area: locale;
        justify-self: end;
        align-self: center;
    }

    .nav-wrapper {
        grid-area: nav;
        justify-self: end; /* Pushes it to the far right */
        align-self: center;
        position: relative;
    }

    .hamburger-btn {
        display: none; /* Hidden on desktop/tablet */
        background: transparent;
        border: none;
        color: white;
        cursor: pointer;
        padding: 0.5rem;
    }

    /* --- Component Styles --- */
    .title-link {
        text-decoration: none;
    }

    nav > ul {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    nav a {
        color: var(--color-semi-transparent-white);
        font-size: 1.5rem;
        text-decoration: none;
        font-weight: bold;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        transition: color 0.2s ease, background-color 0.2s ease;
    }

    nav a:hover,
    nav a:focus-visible {
        color: white;
        background-color: rgba(255, 255, 255, 0.1);
    }

    /* --- TABLET LAYOUT --- */
    @media (max-width: 1535px) {
        header {

            grid-template-columns: auto auto;
            
            /* REORDER EVERYTHING HERE */
            /* This is the magic. We just change the list order. */
            grid-template-areas:
                "branding  branding"
                "nav  locale";
            
            padding: 1rem;
            justify-items: stretch; 
            text-align: left;
            gap: 1rem;
        }

        .branding {
            justify-content: center;
            width: 100%;
            flex-wrap: wrap;
            font-size: 1.2rem;
        }

        .branding .project-title {
            --logo-height: 110px; /* Custom property to control logo height from the parent */
        }

        .branding .eu-logo {
            height: 55px;
        }

        /* Moving the locale and nav next to each other somehow centers them out */
        .locale {
            font-size: 1.5rem;
            justify-self: start; /* Move it to the left, next to the nav */
        }

        .nav-wrapper {
            justify-self: end; /* Move it to the right, next to the locale */
        }
    }

    /* --- MOBILE LAYOUT --- */
    @media (max-width: 790px) {
        header {
            /* Two equal columns for the top row controls */
            grid-template-columns: 1fr 1fr;
            
            grid-template-areas:
                "nav      locale"
                "branding branding";
            
            padding: 0.5rem;
            justify-items: center; 
            text-align: center;
            gap: 0;
        }

        .branding {
            justify-content: center;
            width: 100%;
            flex-wrap: wrap;
            font-size: 1rem;
        }

        .branding .project-title {
            --logo-height: 100px; /* Custom property to control logo height from the parent */
        }

        .branding .eu-logo {
            height: 50px;
        }

        .locale {
            grid-area: locale;
            justify-self: end; /* Top Right */
            align-self: center;
        }

        .nav-wrapper {
            justify-self: start; /* Top Left */
        }

        .hamburger-btn {
            display: flex;
        }

        /* Dropdown Logic for Mobile */
        .nav {
            display: none; /* Hidden by default on mobile */
            position: absolute;
            top: 100%;
            left: 0;
            background-color: #1a1a1a;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 0.5rem;
            padding: 0.5rem;
            min-width: 200px;
            z-index: 20;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            text-align: left;
        }

        .nav-wrapper:hover .nav,
        .nav-wrapper:focus-within .nav {
            display: block;
        }

        .nav ul {
            flex-direction: column;
            gap: 0.5rem;
            padding: 0;
            align-items: stretch;
        }

        .nav a {
            display: block;
            font-size: 1.2rem;
            padding: 0.6rem 0.9rem; /* Match LocaleSelector padding */
        }
    }
</style>