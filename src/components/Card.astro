---
const { getGlossaryHtmlForTerm } = Astro.locals;

interface Props {
  title?: string;
  [key: string]: any;
}

const { title, titleHasGlossary, ...attributes } = Astro.props;

const titleGlossaryHtml = title ? getGlossaryHtmlForTerm(title, 'h3') : null;
---

<li class="card" {...attributes}>
  {title && (titleGlossaryHtml ? <Fragment set:html={titleGlossaryHtml} /> : <h3>{title}</h3>)}
  <p><slot /></p>
</li>

<style>
.card {
  background: #fff;
  border-radius: 1rem;
  margin-bottom: 1.5rem;
  padding: 1.5rem 1.2rem;
  box-shadow: 0 2px 12px rgba(44, 62, 80, 0.07);
  transition: transform 0.2s, box-shadow 0.2s, border-color 0.2s;
  border: 1px solid transparent;
}

.card:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 24px rgba(44, 62, 80, 0.15);
  border-color: var(--color-dark-blue);
}

/* We need global here to also target the h3 generated by the glossary HTML */
.card :global(h3) {
  margin: 0 0 0.5rem 0;
  font-size: 1.3rem;
  /*color: #4a90e2;*/
  color: var(--color-dark-blue);
  font-weight: 600;
}

.card :global(h3 .pid-icon) {
  width: 20px;
  height: 20px;
}

.card p {
  margin: 0;
  /*color: #34495e;*/
  color: var(--color-text);
  font-size: 1.05rem;
}
</style>
