---
import EuLogo from "@components/EuLogo.astro";
import { COPYRIGHT_YEARS } from "@utils/constants";
import { getAriaCurrentPage, PROJECT_NAME_HTML } from "@utils/a11y";

const { homeLocale: home, t } = Astro.locals;

const footerLinks = [
  { href: `${home()}imprint`, label: t('nav_imprint') },
];
---

<footer>
  <nav class="footer-nav">
    <ul>
    {footerLinks.map(link => (
      <li><a href={link.href} class="footer-link" aria-current={getAriaCurrentPage(Astro.url.pathname, link.href)}>{link.label}</a></li>
    ))}
    </ul>
  </nav>
  <div class="copyright-text">
    Copyright Â© {COPYRIGHT_YEARS} <Fragment set:html={t('copyright_text', false, PROJECT_NAME_HTML)} />
  </div>
  <div class="eu-logo-wrapper">
    <EuLogo showDisclaimer={true} />
  </div>
</footer>
<style>
  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 1.2rem;
    background-color: var(--color-secondary);
    color: var(--color-text-on-secondary);
  }
  .footer-nav > ul {
    list-style: none;
    display: flex;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
  }
  .eu-logo-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 50vw;
    gap: 0.5rem;
  }
  .footer-link {
    color: var(--color-text-on-secondary);
    text-decoration: none;
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }
  .footer-link:hover {
    text-decoration: underline;
  }
</style>
