---
import Organiser from './Organiser.astro';
import iatLogo from '../assets/images/iat_logo.png';
import upvLogo from '../assets/images/logo_UPV_150.png';
import hurtLogo from '../assets/images/logo_hurt_350.jpg';

const { ...attributes } = Astro.props;
---

<div class="organisers-container" {...attributes}>
  <Organiser
    href="https://www.iat.eu"
    logo={iatLogo}
    alt="IAT Logo"
    name="IAT"
    country="Germany"
    role="Project coordinator"
  />
  <Organiser
    href="https://www.upv.es"
    logo={upvLogo}
    alt="UPV Logo"
    name="UPV"
    country="Spain"
  />
  <Organiser
    href="https://www.hurt.hr"
    logo={hurtLogo}
    alt="HURT Logo"
    name="HURT"
    country="Croatia"
  />
</div>

<style>
.organisers-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
  justify-items: center;
  align-items: start;
}
</style>
