---
import Card from "@components/Card.astro";
import Cards from "@components/Cards.astro";
import { PROJECT_NAME } from "@utils/constants";

const { t } = Astro.locals;
---

<Cards title={t('description_title', false, PROJECT_NAME)}>
  <Card set:html={t('description_content', true, PROJECT_NAME)} />      
  <Card set:html={t('description_mission', true)} />
</Cards>