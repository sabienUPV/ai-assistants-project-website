---
import { Icon } from "astro-icon/components";

import Card from "@components/Card.astro";
import Cards from "@components/Cards.astro";
import { CONTACT_EMAIL } from "@utils/constants";

const { t } = Astro.locals;
---

<section id="contact">
  <Cards title={t('nav_contact')} columns={1}>
    <Card>
      <div class="contact-wrapper">
        <p class="contact-text">{t('contact_description')}</p>
        
        <div class="contact-pill">
          <a href={`mailto:${CONTACT_EMAIL}`} class="icon-link" aria-label="Send email">
            <Icon name="email" class="icon" />
          </a>
          <span class="email-text">{CONTACT_EMAIL}</span>
        </div>
      </div>
    </Card>
  </Cards>
</section>

<style>
  .contact-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 1.5rem;
    width: 100%;
  }

  .contact-text {
    font-size: min(1.1rem, 100%);
    color: var(--color-text);
    max-width: 50ch;
    margin: 0;
  }

  .contact-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background-color: var(--color-secondary);
    color: white;
    padding: 0.5rem 1.5rem 0.5rem 0.5rem;
    border-radius: 2rem;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }

  .icon-link {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(255, 255, 255, 0.2);
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    color: white;
    transition: all 0.2s ease;
  }

  .icon-link:hover {
    background-color: rgba(255, 255, 255, 0.4);
    transform: scale(1.1);
  }

  .email-text {
    font-size: min(1rem, 85%);
    font-weight: 600;
    cursor: text;
  }

  .email-text::selection {
    background-color: white;
    color: var(--color-secondary);
  }

  .icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  @media (max-width: 600px) {
    .contact-pill {
      padding: 0.5rem 0.5rem 0.5rem 0.5rem;
      gap: 0.2rem;
    }
  }
</style>