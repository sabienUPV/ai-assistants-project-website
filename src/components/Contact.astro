---
import { Icon } from "astro-icon/components";

import Card from "@components/Card.astro";
import Cards from "@components/Cards.astro";
import { CONTACT_EMAIL } from "@constants";

const { t } = Astro.locals;
---

<section id="contact">
  <Cards title={t('nav_contact')} columns={1}>
    <Card>
      <address class="contact-wrapper">
        <p class="contact-text">{t('contact_description')}</p>
        
        <a href={`mailto:${CONTACT_EMAIL}`} class="contact-pill">
          <span class="icon-circle">
            <Icon name="email" class="icon" />
          </span>
          <span class="email-text">{CONTACT_EMAIL}</span>
        </a>
      </address>
    </Card>
  </Cards>
</section>

<style>
  .contact-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 1.5rem;
    width: 100%;
    /* Reset the default italic styling that browsers apply to <address> */
    font-style: normal; 
  }

  .contact-text {
    font-size: min(1.1rem, 100%);
    color: var(--color-text);
    max-width: 50ch;
    margin: 0;
  }

  /* The pill is now a link, so we remove the default underline */
  .contact-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background-color: var(--color-secondary);
    color: white;
    padding: 0.5rem 1.5rem 0.5rem 0.5rem;
    border-radius: 2rem;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    text-decoration: none; 
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  /* Add back the underline and add box shadow on hover */
  .contact-pill:hover,
  .contact-pill:focus-visible {
    box-shadow: 0 6px 12px rgba(0,0,0,0.15);
    text-decoration: underline;
  }

  /* The icon link wrapper becomes just a visual container */
  .icon-circle {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(255, 255, 255, 0.2);
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    color: white;
    transition: all 0.2s ease;
  }

  /* The circle grows when you hover over the main pill link */
  .contact-pill:hover .icon-circle {
    background-color: rgba(255, 255, 255, 0.4);
    transform: scale(1.1);
  }

  .email-text {
    font-weight: 600;
  }

  .icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  @media (max-width: 350px) {
    .contact-pill {
      padding: 0.5rem 0.5rem 0.5rem 0.5rem;
      gap: 0.4rem;
    }
    .email-text {
      font-size: 85%;
    }
  }
</style>